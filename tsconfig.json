{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": [
      "ESNext"
    ],
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "neuri": [
        "./packages/neuri/src/index.ts"
      ],
      "neuri/openai": [
        "./packages/neuri/src/openai.ts"
      ],
      "neuri/test": [
        "./packages/neuri/src/test.ts"
      ]
    },
    "types": [
      "node",
      "vite/client"
    ],
    "strict": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "examples/**/*.ts",
    "examples/**/*.d.ts",
    "examples/**/*.tsx",
    "examples/**/*.vue",
    "docs/**/*.ts",
    "docs/**/*.vue",
    "docs/**/.vitepress/**/*.ts",
    "docs/**/.vitepress/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
